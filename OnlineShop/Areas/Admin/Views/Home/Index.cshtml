@model OnlineShop.Areas.Admin.Models.GeneralSettings

@{
    ViewBag.Title = "Administration Panel";
}
@section styles {
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/admin_styles.css")" />
}

<div class="content-container">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-12">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item active" aria-current="page">Administration Panel</li>
                        <li class="breadcrumb-item active" aria-current="page">
                            @Html.ActionLink("General", "Index", "Home", new { area = "Admin" }, null)
                        </li>
                    </ol>
                </nav>
            </div>
        </div>
        <div class="row">
            <h2>Administration panel</h2>
            <hr />
        </div>
        <div class="row justify-content-center">
            <div class="col-sm-3">
                <div class="card">
                    <div class="card-body">
                        @Html.ActionLink("General", "Index", "Home", new { area = "Admin" }, null)
                    </div>
                </div>
            </div>
            <div class="col-sm-3">
                <div class="card">
                    <div class="card-body">
                        @Html.ActionLink("Manage products", "Index", "Product", new { area = "Admin" }, null)
                    </div>
                </div>
            </div>
            <div class="col-sm-3">
                <div class="card">
                    <div class="card-body">
                        @Html.ActionLink("Manage categories", "Index", "Category", new { area = "Admin" }, null)
                    </div>
                </div>
            </div>
            <div class="col-sm-3">
                <div class="card">
                    <div class="card-body">
                        @Html.ActionLink("Manage users", "Index", "User", new { area = "Admin" }, null)
                    </div>
                </div>
            </div>
            <div class="col-sm-3">
                <div class="card">
                    <div class="card-body">
                        @Html.ActionLink("Manage orders", "Index", "Order", new { area = "Admin" }, null)
                    </div>
                </div>
            </div>
            <div class="col-sm-3">
                <div class="card">
                    <div class="card-body">
                        @Html.ActionLink("Manage Discount", "ListDiscounts", "ExtendUser", new { area = "Admin" }, null)
                    </div>
                </div>
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-sm-8">
                @{ Html.RenderAction("Settings", "Home"); }
            </div>
        </div>
    </div>
</div>