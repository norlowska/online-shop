@model OnlineShop.Areas.Admin.Models.GeneralSettings
@section styles {
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/admin_styles.css")" />
}
@using (Html.BeginForm())
{
    <div class="form-group row ml-auto row-margin-top">
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
        @if (Model == null)
        {
            <div class="alert alert-danger col-md-12" role="alert">
                Contact e-mail address is not set!
            </div>
        }
        @Html.LabelFor(model => model.ContactAddress, "E-mail address for contact", htmlAttributes: new { @class = "control-label col-md-3 row-margin-top" })
        <div class="col-md-8 row-margin-top">
            @Html.EditorFor(model => model.ContactAddress, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.ContactAddress, "", new { @class = "text-danger" })

        </div>
    </div>
    <div class="form-group row ml-auto">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default submit-button" />
        </div>
    </div>
}