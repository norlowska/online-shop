@model OnlineShop.Models.RegisterViewModel
@{
    ViewBag.Title = "Create new user";
}

@section styles {
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/admin_styles.css")" />
}
<div class="content-container">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">@Html.ActionLink("Administration Panel", "Index", "Home")</li>
                    <li class="breadcrumb-item">@Html.ActionLink("Users", "Index", "User")</li>
                    <li class="breadcrumb-item active" aria-current="page">Create</li>
                </ol>
            </div>
        </div>
        <div class="row">
            <h2>Create new user</h2>
        </div>
        <div class="row justify-content-center row-margin-top">
            <div class="col-sm-8">
                @using (Html.BeginForm())
                {

                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary("", new { @class = "text-danger" })
                    <div class="form-group">
                        <label class="control-label col-md-2"> Email </label>
                        <div class="col-md-10">
                            <input class="form-control" name="Email" type="email" />
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2"> Password </label>
                        <div class="col-md-10">
                            <input class="form-control" name="password" type="password" />
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2"> Role </label>
                        <div class="col-md-6">
                            @Html.DropDownList("Rola", null, htmlAttributes: new { @class = "form-control" })

                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" class="btn btn-default submit-button" value="Register" />
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>