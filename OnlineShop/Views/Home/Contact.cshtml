@model OnlineShop.Models.Contact

@{
    ViewBag.Title = "Contact";
}

@section styles {
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/home_styles.css")" />
}

<div class="contact">
    <div class="container">
        <div class="row justify-content-center">
            @using (Html.BeginForm("Contact", "Home", FormMethod.Post, new { @class = "col-lg-8", role = "form" }))
            {
                <div class="col-lg-12">
                    <h2>Contact us</h2>
                    <hr />
                </div>
                @Html.ValidationSummary("", new { @class = "text-danger" })
                <div class="form-group row ml-auto">
                    @Html.LabelFor(m => m.FirstName, "First name", new { @class = "col-lg-2 col-form-label label-text" })
                    <div class="col-lg-8">
                        @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group row ml-auto">
                    @Html.LabelFor(m => m.Email, new { @class = "col-lg-2 col-form-label label-text" })
                    <div class="col-lg-8">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group row ml-auto">
                    @Html.LabelFor(m => m.Subject, new { @class = "col-lg-2 col-form-label label-text" })
                    <div class="col-md-8">
                        @Html.TextBoxFor(m => m.Subject, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group row ml-auto">
                    @Html.LabelFor(m => m.Message, new { @class = "col-lg-2 col-form-label label-text" })
                    <div class="col-md-8">
                        @Html.TextAreaFor(m => m.Message, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group row ml-auto">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Send" class="btn btn-default submit-button" />
                    </div>
                </div>
            }
        </div>
    </div>
</div>
