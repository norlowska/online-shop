                            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <hr />

                    <div class="form-group row ml-auto">
                        @Html.LabelFor(model => model.orderPaymentType, "Sposób płatności", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EnumDropDownListFor(model => model.orderPaymentType, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.orderPaymentType, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group row ml-auto">
                        @Html.LabelFor(model => model.orderShippingMethod, "Wysyłka", htmlAttributes: new { @class = "control-label col-md-2" })
