<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SuperSklep | @ViewBag.Title</title>
    <link href="https://fonts.googleapis.com/css?family=Oswald|PT+Sans+Narrow" rel="stylesheet">


    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="container">
        <div class="sidenav">
            <div id="logo">
                <a href="#">
                    <img src="~/Content/Images/logo_transparent.png" alt="logo" />
                </a>
            </div>
            <nav>
                <ul>
                    <li>@Html.ActionLink("HOME", "Index", "Home")</li>
                    <li>@Html.ActionLink("STORE", "Index", "Categories")</a></li>
                    <li>@Html.ActionLink("ABOUT", "About", "Home")</li>
                    <li>@Html.ActionLink("CONTACT", "Contact", "Home")</li>
                </ul>
            </nav>
            <div class="nav-icons">
                <a href="#" class="user-nav"><img src="/Content/Images/user-solid.svg" alt="" />LOG IN</a>
                <a href="/Products/viewCart" class="cart-nav"><img src="/Content/Images/shopping-cart-solid.svg" alt="" /> Cart <span>(0)</span></a>
                <a href="/Products/sreach" class="search-nav"><img src="/Content/Images/search-solid.svg" alt="" /> Search</a>
                <a href="https://github.com/urnooblem/online-shop" class="github-nav"><img src="/Content/Images/github-brands.svg" alt="" /></a>
            </div>
        </div>
        <div class="content">
            @RenderBody()
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year — moja aplikacja platformy ASP.NET</p>
            </footer>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
