@model OnlineShop.Models.Product
@section scripts
{
    <script src="@Url.Content("~/Scripts/qty-input.js")"></script>
}
@{
    ViewBag.Title = "Edit";
}

<div class="product-details">
    <div class="row">
        <ul class="breadcrumb">
            <li>@Html.ActionLink("HOME", "Index", "Home")</li>
            <li>@Html.ActionLink("STORE", "Index", "Categories")</li>
            @* dla każdej kategorii breadcrumb*@
            <li></li>
            @*a tu nazwa produktu*@
            <li class="active">@Html.DisplayFor(modelItem => @Model.name)</li>
        </ul>
    </div>
    <div class="row details-row">
        <form>
            <div class="col-sm-12 col-lg-5 text-center product-img">
                <img class="img-responsive" src="https://via.placeholder.com/500x500.png?text=Product+details+img" width="500" height="500" />
                <input class="form-control" type="file" name="prodImg" accept="image/png, image/jpeg">
            </div>
            <div class="col-sm-12 col-lg-7 justify-content-center">
                <div class="details-content">
                    <div class="product-name">
                        <div class="form-group">
                            <div class="product-name-input">
                                <label for="prodName">Product name</label>
                                <input type="text" name="prodName" value="@Model.name" class="form-control">
                            </div>
                            </div>
                        </div>
                    <div class="product-price">
                        <label for="prodPrice">Price</label>
                        <input type="text" name="prodPrice" value="@Model.price" class="form-control">
                    </div>
                    <div class="product-description">
                        <label>Description</label>
                        <p class="hint">Use HTML tags to format text</p>
                        @Html.TextArea("Description", null, new { @class = "form-control" })
                    </div>
                    <div class="submit-changes">
                        <button type="submit" class="btn btn-default">
                            <span class="glyphicon glyphicon-floppy-disk" style="margin-right: 12px;"></span>Save
                        </button>
                    </div>   
                </div>
            </div>
        </form>
    </div>
