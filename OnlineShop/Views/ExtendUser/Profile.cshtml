@model OnlineShop.Models.ApplicationUser

@{
    ViewBag.Title = "profil";
}

@section styles {
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/home_styles.css")" />
}

<div class="content-container">
    <div class="container">
        <div class="row">
            <div class="col-md-10"><h3>My account</h3></div>
            <div class="col-md-2"><h4>@Html.ActionLink("Edit", "EditProfile")</h4></div>
            
        </div>
        <div class="row justify-content-center">
            <div class="col-sm-8">
                <div class="row profile-row">
                    <div class="col-md-5">
                        <b>@Html.DisplayName("First name")</b>
                    </div>
                    <div class="col-md-7">
                        @Html.DisplayFor(model => model.imie)
                    </div>
                </div>
                <div class="row profile-row">
                    <div class="col-md-5">
                        <b>@Html.DisplayName("Last name")</b>
                    </div>
                    <div class="col-md-7">
                        @Html.DisplayFor(model => model.Nazwisko)
                    </div>
                </div>
                <div class="row profile-row">
                    <div class="col-md-5">
                        <b>@Html.DisplayName("Address")</b>
                    </div>
                    <div class="col-md-7">
                        @Html.DisplayFor(model => model.Adres)
                    </div>
                </div>
                <div class="row profile-row">
                    <div class="col-md-5">
                        <b>@Html.DisplayName("City")</b>
                    </div>
                    <div class="col-md-7">
                        @Html.DisplayFor(model => model.miasto)
                    </div>
                </div>
                <div class="row profile-row">
                    <div class="col-md-5">
                        <b>@Html.DisplayName("State/Voivodeship/Province")</b>
                    </div>
                    <div class="col-md-7">
                        @Html.DisplayFor(model => model.Województwo)
                    </div>
                </div>
                <div class="row profile-row">
                    <div class="col-md-5">
                        <b>@Html.DisplayName("Postal code")</b>
                    </div>
                    <div class="col-md-7">
                        @Html.DisplayFor(model => model.kod_pocztowy)
                    </div>
                </div>
                <div class="row profile-row">
                    <div class="col-md-5">
                        <b>@Html.DisplayName("Country")</b>
                    </div>
                    <div class="col-md-7">
                        @Html.DisplayFor(model => model.Kraj)
                    </div>
                </div>
                <div class="row profile-row">
                    <div class="col-md-5">
                        <b>@Html.DisplayNameFor(model => model.Email)</b>
                    </div>
                    <div class="col-md-7">
                        @Html.DisplayFor(model => model.Email)
                    </div>
                </div>
                <div class="row profile-row">
                    <div class="col-md-5">
                        <b>@Html.DisplayName("Phone number")</b>
                    </div>
                    <div class="col-md-7">
                        @Html.DisplayFor(model => model.PhoneNumber)
                    </div>
                </div>
                <div class="row profile-row">
                    <div class="col-md-12">
                        @Html.DisplayFor(model => model.newsletter)     <i style="margin-left:15px;">@Html.DisplayName("I want to receive newsletters and special offer notices from Techtonics")</i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
