                        <div class="col-md-8">
                            @Html.EditorFor(model => model.miasto, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.miasto, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group row ml-auto">
                        @Html.LabelFor(model => model.Województwo, "State/Voivodeship/Province", htmlAttributes: new { @class = "control-label col-md-4" })
                        <div class="col-md-8">
                            @Html.EditorFor(model => model.Województwo, new { htmlAttributes = new { @class = "form-control" } })
