@model OnlineShop.Models.ApplicationUser
@{
    ViewBag.Title = "Edit";
}

@section styles {
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/home_styles.css")" />
}

<div class="content-container">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h2>Edit user <i>@Html.DisplayFor(model => model.UserName)</i></h2>
            </div>
        </div>
        <div class="row justify-content-center row-margin-top">
            <div class="col-sm-8">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(model => model.Id)
                    @Html.HiddenFor(model => model.AccessFailedCount)
                    @Html.HiddenFor(model => model.Claims)
                    @Html.HiddenFor(model => model.LockoutEnabled)
                    @Html.HiddenFor(model => model.LockoutEndDateUtc)
                    @Html.HiddenFor(model => model.PasswordHash)
                    @Html.HiddenFor(model => model.SecurityStamp)
                    @Html.HiddenFor(model => model.TwoFactorEnabled)
                    @Html.HiddenFor(model => model.Logins)
                    @Html.HiddenFor(model => model.EmailConfirmed)
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group row ml-auto">
                        @Html.LabelFor(model => model.UserName, "Username", htmlAttributes: new { @class = "control-label col-md-4" })
                        <div class="col-md-8">
                            @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group row ml-auto">
                        @Html.LabelFor(model => model.imie, "First name", htmlAttributes: new { @class = "control-label col-md-4" })
                        <div class="col-md-8">
                            @Html.EditorFor(model => model.imie, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.imie, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group row ml-auto">
                        @Html.LabelFor(model => model.Nazwisko, "Last name", htmlAttributes: new { @class = "control-label col-md-4" })
                        <div class="col-md-8">
                            @Html.EditorFor(model => model.Nazwisko, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Nazwisko, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group row ml-auto">
                        @Html.LabelFor(model => model.Adres, "Address", htmlAttributes: new { @class = "control-label col-md-4" })
                        <div class="col-md-8">
                            @Html.EditorFor(model => model.Adres, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Adres, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group row ml-auto">
