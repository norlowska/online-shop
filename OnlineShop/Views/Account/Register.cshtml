@model OnlineShop.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}

@section styles {
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/account_styles.css")" />
}

<div class="content-container">
    <div class="container">
        <div class="row justify-content-center">
            @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "col-lg-8", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <div class="col-lg-12">
                    <h2>Create a new account</h2>
                    <hr />
                </div>
                
                @Html.ValidationSummary("", new { @class = "text-danger" })
                <div class="form-group row ml-auto">
                    @Html.LabelFor(m => m.Email, new { @class = "col-lg-2 col-form-label label-text" })
                    <div class="col-lg-8">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group row ml-auto">
                    @Html.LabelFor(m => m.Password, new { @class = "col-lg-2 col-form-label label-text" })
                    <div class="col-lg-8">
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group row ml-auto">
                    @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-lg-2 col-form-label label-text" })
                    <div class="col-md-8">
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group row ml-auto">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Register" class="btn btn-default submit-button" />
                    </div>
                </div>
            }
        </div>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
